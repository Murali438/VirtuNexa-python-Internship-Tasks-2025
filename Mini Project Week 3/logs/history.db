import sqlite3

def init_db():
    conn = sqlite3.connect("history.db")
    c = conn.cursor()
    c.execute('''
        CREATE TABLE IF NOT EXISTS operations (
            id INTEGER PRIMARY KEY,
            operation TEXT,
            files TEXT,
            timestamp DATETIME DEFAULT CURRENT_TIMESTAMP
        )
    ''')
    conn.commit()
    conn.close()

def log_to_db(operation, files):
    conn = sqlite3.connect("history.db")
    c = conn.cursor()
    c.execute('INSERT INTO operations (operation, files) VALUES (?, ?)', (operation, files))
    conn.commit()
    conn.close()
